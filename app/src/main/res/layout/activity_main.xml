<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sun"
    >

    <TextClock
        android:id="@+id/my_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:format12Hour="yyyy年MM月dd EE\naa HH:mm:ss"
        android:format24Hour="yyyy年MM月dd EE\naa hh:mm:ss"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        tools:targetApi="jelly_bean_mr1"
        android:textAppearance="@style/Widget.AppCompat.Toolbar"
        />

    <CalendarView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/my_tc"
        android:layout_marginTop="40dp"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:background="#00000000"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAlm"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="鬧鐘"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnChr"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="碼表"
            android:textSize="25sp"/>

    </LinearLayout>



</RelativeLayout>